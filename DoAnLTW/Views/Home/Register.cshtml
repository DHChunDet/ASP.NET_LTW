@model DoAnLTW.Models.User

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="/css/style1.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <title>Login</title>
</head>
<body>

<hr />
	<div class="container" id="container">
		<div class="form-container log-in-container">
			<form asp-action="Login" asp-controller="Home">
				<h1>Register</h1>
				<div class="social-container">
					<a href="#" class="social"><i class="fa fa-facebook fa-2x"></i></a>
					<a href="#" class="social"><i class="fab fa fa-twitter fa-2x"></i></a>
				</div>
				<span>or use your account</span>
				<input type="text" placeholder="Name" name="name" />
				<input type="email" placeholder="Email" name="email" />
				<input type="password" placeholder="Password" name="password" />

				<button>Regist</button>
				<br />
				<a asp-action="Login">Back to Login</a>
			</form>
		</div>
		<div class="overlay-container">
			<div class="overlay">
				<div class="overlay-panel overlay-right">
					<h1>Welcome to Electro</h1>
					<p>Discover the latest in mobile technology at Electro, your go-to destination for cutting-edge smartphones, tablets, and accessories. As a premier online mobile retailer, we bring you a curated selection of the best devices from top brands around the globe.</p>
				</div>
			</div>
		</div>
	</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</body>
</html>
