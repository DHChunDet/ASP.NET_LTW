@model DoAnLTW.Models.User

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
	<link rel="stylesheet" href="/css/style1.css">
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
	<title>Login</title>
</head>
<body>
	<div class="container" id="container">
		<div class="form-container log-in-container">
			<form asp-action="Login" asp-controller="Home">
				<h1>Login</h1>
				<div class="social-container">
					<a href="#" class="social"><i class="fa fa-facebook fa-2x"></i></a>
					<a href="#" class="social"><i class="fab fa fa-twitter fa-2x"></i></a>
				</div>
				<span>or use your account</span>
				<input type="text" placeholder="Name" name="name" />
				<input type="password" placeholder="Password" name ="password"/>
				<a href="#">Forgot your password?</a>
				<button>Log In</button>
				<br/>
				<button><a href="/Home/Register"> Regist</a></button>
				<a asp-action="Index">Back to List</a>
			</form>
		</div>
		<div class="overlay-container">
			<div class="overlay">
				<div class="overlay-panel overlay-right">
					<h1>Welcome to Electro</h1>
					<br/>
					<h3>Login Admin: Name : Admin, Password : Admin@123 </h3>
					<br/>
					<p>Login admin để có thể sử dụng các chức năng tương ứng role</p>
				</div>
			</div>
		</div>
	</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</body>
</html>
